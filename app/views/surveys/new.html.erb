<%# app/views/surveys/new.html.erb %>

<h1 class="text-4xl font-bold text-center text-blue-600 my-12">Crea un Nuevo Formulario</h1>

<%= form_with(model: @survey, local: true) do |form| %>
  <div class="flex justify-center">
    <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-lg">
      
      <div class="mb-6">
        <%= form.label :name, class: "block text-blue-600 text-lg mb-2" %>
        <%= form.text_field :name, class: "w-full p-4 border-2 border-blue-400 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= form.label :description, class: "block text-blue-600 text-lg mb-2" %>
        <%= form.text_area :description, class: "w-full p-4 border-2 border-blue-400 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-6">
        <%= form.label :email, class: "block text-blue-600 text-lg mb-2" %>
        <%= form.email_field :email, class: "w-full p-4 border-2 border-blue-400 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center">
          <%= form.check_box :processed_in_job, class: "h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= form.label :processed_in_job, "Procesar en segundo plano", class: "ml-2 text-blue-600" %>
        </div>
      </div>

      <div class="flex justify-center">
        <%= form.submit "Crear Formulario", class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300" %>
      </div>
      
    </div>
  </div>
<% end %>
