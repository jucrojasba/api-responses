<%= content_for :title, "Todos los Formularios" %>

<h1 class="text-4xl font-bold text-center my-12 text-blue-600">Todos los Formularios</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @surveys.each do |survey| %>
    <div class="bg-white rounded-lg shadow-lg p-6 transition transform hover:scale-105 hover:shadow-xl hover:bg-blue-50">
      <h2 class="text-2xl font-semibold text-blue-600 mb-2"><%= survey.name %></h2>
      <p class="text-gray-700 mb-4"><%= survey.description %></p>
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-500">Estado: <%= survey.processed_in_job ? "En Proceso" : "Procesado" %></span>
        <%= link_to 'Ver', survey_path(survey), class: "bg-blue-600 text-white px-4 py-2 rounded-full hover:bg-blue-700 transition" %>
      </div>
    </div>
  <% end %>
</div>
